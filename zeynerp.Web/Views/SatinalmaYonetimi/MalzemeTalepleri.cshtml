@section Scripts {
    <script src="~/js/examples/examples.validation.js"></script>
    <script>
        var successMessage = @Html.Raw(Json.Serialize(ViewBag.SuccessMessage));
        if (successMessage.length > 0) {
            var notice = new PNotify({
                text: successMessage,
                type: 'success',
                addclass: 'click-2-close',
                hide: true,
                buttons: {
                    closer: false,
                    sticker: false
                }
            });

            notice.get().click(function () {
                notice.remove();
            });
        }
    </script>
    <script>
        (function ($) {

            'use strict';

            var listDataTableInit = function () {

                var $firmaTable = $('.firmaTable');
                var $malzemeTable = $('.malzemeTable');

                $firmaTable.dataTable({
                    dom: '<"row justify-content-between"<"col-auto"><"col-auto">><"table-responsive"t>',
                    columnDefs: [{
                        orderable: false,
                        targets: [4, 5]
                    }]
                });           

                $malzemeTable.dataTable({
                    dom: '<"row justify-content-between"<"col-auto"><"col-auto">><"table-responsive"t>',
                    order: [[1, 'asc']],
                    columnDefs: [{
                        orderable: false,
                        targets: [0]
                    }]
                });           
            };

            listDataTableInit();

        }(jQuery));
    </script>
    <script>
        var cariler = @Html.Raw(Json.Serialize(Model.CariViewModels));

        (function ($) {
            "use strict";

            var EditableYetkiliTable = {
                options: {
                    addButton: "#addToTable",
                    saveButton: "#saveAllRows",
                    table: "#datatable-editable"
                },

                initialize: function () {
                    this.setVars().build().events();
                    this.rowAdd();
                },

                setVars: function () {
                    this.$table = $(this.options.table);
                    this.$addButton = $(this.options.addButton);
                    return this;
                },

                build: function () {
                    this.datatable = this.$table.DataTable({
                        dom: '<"row"<"col-lg-6"><"col-lg-6">><"table-responsive"t>',
                        aoColumns: [null, { width: '35%' }, { width: '5%' }],
                        ordering: false,
                        language: {
                            emptyTable: "Tabloda gösterilecek veri bulunmamaktadır"
                        }
                    });

                    window.dt = this.datatable;

                    return this;
                },

                events: function () {
                    var _self = this;

                    this.$table
                        .on("click", "a.cancel-row", function (e) {
                            e.preventDefault();
                            _self.rowCancel($(this).closest("tr"));
                        });

                    this.$addButton.on("click", function (e) {
                        e.preventDefault();
                        _self.rowAdd();
                    });

                    $(this.options.saveButton).on("click", function (e) {
                        e.preventDefault();
                        _self.saveAllRows();
                    });

                    return this;
                },

                rowAdd: function () {
                    var _self = this;

                    var actions, data, $row;

                    actions = [
                        '<a href="#" class="hidden on-editing cancel-row text-danger"><i class="fas fa-trash-can fa-xl"></i></a>',
                    ].join(" ");

                    data = this.datatable.row.add(["", "", actions]);
                    $row = this.datatable.row(data[0]).nodes().to$();
                    console.log(_self);
                    $row.addClass("adding").find("td:last").addClass("actions text-center");

                    this.rowEdit($row);

                    this.datatable.order([0, "asc"]).draw();
                },

                saveAllRows: function () {
                    var _self = this;
                    this.$table.find("tbody tr").each(function () {
                        _self.rowSave($(this));
                    });
                },

                rowCancel: function ($row) {
                    var _self = this,
                        $actions,
                        i,
                        data;

                    if ($row.hasClass("adding")) {
                        this.rowRemove($row);
                    } else {
                        data = this.datatable.row($row.get(0)).data();
                        this.datatable.row($row.get(0)).data(data);

                        $actions = $row.find("td.actions");
                        if ($actions.get(0)) {
                            this.rowSetActionsDefault($row);
                        }

                        this.datatable.draw();
                    }
                },

                rowEdit: function ($row) {
                    var _self = this,
                        data,
                        rowIndex;

                    data = this.datatable.row($row.get(0)).data();

                    rowIndex = this.datatable.rows().count();

                    $row.children("td").each(function (i) {
                        var $this = $(this);

                        if ($this.hasClass("actions")) {
                            _self.rowSetActionsEditing($row);
                        } else {
                            var inputType = "text";
                            var inputClass = "form-control populate";
                            var content = data[i];
                            var inputName = "";
                            var element = "";

                            if (i === 0) {
                                element = '<select name="Model.SelectedCariCariYetkililer[' + (rowIndex - 1) + '].CariId"' +
                                    ' class="' +
                                    inputClass +
                                    ' cari-select" data-row-index="' + (rowIndex - 1) + '" required><option>Seçiniz</option>';

                                for (var j = 0; j < cariler.length; j++) {
                                    var cari = cariler[j];
                                    element += "<option value='" + cari.id + "'>" + cari.kisaAdi + "</option>";
                                };

                                element += "</select>";
                            }
                            else {
                                element = '<select name="Model.SelectedCariCariYetkililer[' + (rowIndex - 1) + '].CariYetkiliId"' +
                                    ' class="' +
                                    inputClass +
                                    ' cariYetkili" data-row-index="' + (rowIndex - 1) + '" required><option>Seçiniz</option></select>';
                            }                            

                            $this.html(element);

                            $this.find('select').select2({
                                theme: "bootstrap",
                                width: '100%',
                                language: {
                                    noResults: function() {
                                        return "";
                                    }
                                }
                            });
                        }
                    });
                },

                rowSave: function ($row) {
                    var _self = this,
                        $actions,
                        values = [];

                    if ($row.hasClass("adding")) {
                        this.$addButton.removeAttr("disabled");
                        $row.removeClass("adding");
                    }

                    values = $row
                        .find("td")
                        .map(function (i) {
                            var $this = $(this);

                            if ($this.hasClass("actions")) {
                                _self.rowSetActionsDefault($row);
                                return _self.datatable.cell(this).data();
                            } else {
                                var $input = $this.find("input");
                                if ($input.length) {
                                    return $.trim($input.val());
                                } else {
                                    return $.trim($this.text());
                                }
                            }
                        })
                        .get();

                    this.datatable.row($row.get(0)).data(values);

                    $actions = $row.find("td.actions");
                    if ($actions.get(0)) {
                        this.rowSetActionsDefault($row);
                    }

                    this.datatable.draw();
                },

                rowRemove: function ($row) {
                    if ($row.hasClass("adding")) {
                        this.$addButton.removeAttr("disabled");
                    }

                    this.datatable.row($row.get(0)).remove().draw();
                },

                rowSetActionsEditing: function ($row) {
                    $row.find(".on-editing").removeClass("hidden");
                    $row.find(".on-default").addClass("hidden");
                },

                rowSetActionsDefault: function ($row) {
                    $row.find(".on-editing").addClass("hidden");
                    $row.find(".on-default").removeClass("hidden");
                },
            };

            $(function () {
                EditableYetkiliTable.initialize();
            });
        }).apply(this, [jQuery]);

        $(document).on('change', '.cari-select', function () {
            var $cariSelect = $(this);
            var rowIndex = $cariSelect.data('row-index');

            $('.cariYetkili[data-row-index="' + rowIndex + '"]').empty();
            $('.cariYetkili[data-row-index="' + rowIndex + '"]').append('<option>Seçiniz</option>');

            var carilerArr = cariler.filter(function (cari) {
                return cari.id == $cariSelect.val();
            });

            for (var i = 0; i < carilerArr[0].cariYetkiliViewModels.length; i++) {
                var cariYetkili = carilerArr[0].cariYetkiliViewModels[i];
                $('.cariYetkili[data-row-index="' + rowIndex + '"]').append('<option value="' + cariYetkili.id + '">' + cariYetkili.adiSoyadi + '</option>');
            }
        });
    </script>
}