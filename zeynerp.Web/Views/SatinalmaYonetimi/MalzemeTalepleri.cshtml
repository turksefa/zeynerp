@model MalzemeTalepleriViewModel
@{
    ViewData["LayoutTitle"] = "Talepler";
}

<header class="page-header">
    <h2>@ViewData["LayoutTitle"]</h2>

    <div class="right-wrapper text-end">
        <ol class="breadcrumbs me-3">
            <li><span>Satın Alma Yönetimi</span></li>
            <li><span class="text-light">Talepler</span></li>
        </ol>
    </div>
</header>

<form id="form" class="ecommerce-form action-buttons-fixed" asp-action="MalzemeTalepleri" method="post">
    <div class="row">
        <div class="col">
            <section class="card card-modern">
                <div class="card-body">
                    <table class="table table-ecommerce-simple table-striped mb-0 malzemeTable"
                        style="min-width: 1200px;">
                        <thead>
                            <tr>
                                <th width="3%" class="checkbox-column">
                                    <div class="checkbox-custom checkbox-default">
                                        <input type="checkbox" />
                                        <label></label>
                                    </div>
                                </th>                              
                                <th>Malzeme Adı</th>
                                <th>Özellik</th>
                                <th>Boyutlar</th>
                                <th>Birim</th>
                                <th>KG</th>
                                <th>M2</th>
                                <th>MM</th>
                                <th>M</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.MalzemeTalepViewModels.Count; i++)
                            {
                                <tr>
                                    <input type="hidden" name="Model.SelectedMalzemeTalepler[@i].MalzemeTalepId"
                                        value="@Model.MalzemeTalepViewModels[i].Id" />
                                    <td>
                                        <div class="checkbox-custom chekbox-primary">
                                            <input type="checkbox" name="Model.SelectedMalzemeTalepler[@i].IsSelected"
                                                value="true" />
                                            <label></label>
                                        </div>
                                    </td>
                                    <td>@Model.MalzemeTalepViewModels[i].Stok.Name
                                        @(!string.IsNullOrEmpty(Model.MalzemeTalepViewModels[i].Aciklama) ?
                                                                            $"({Model.MalzemeTalepViewModels[i].Aciklama})" : "")</td>
                                <td>@Model.MalzemeTalepViewModels[i].StokOzellik.Name</td>
                                <td>
                                    @if (Model.MalzemeTalepViewModels[i].Boyut1 != "0")
                                        {
                                            <span>@Model.MalzemeTalepViewModels[i].Stok.Oncul1</span>
                                            <span>@Model.MalzemeTalepViewModels[i].Boyut1</span>
                                            <span>@Model.MalzemeTalepViewModels[i].Stok.Ayrac1</span>
                                        }
                                        @if (Model.MalzemeTalepViewModels[i].Boyut2 != "0")
                                        {
                                            <span>@Model.MalzemeTalepViewModels[i].Stok.Oncul2</span>
                                            <span>@Model.MalzemeTalepViewModels[i].Boyut2</span>
                                            <span>@Model.MalzemeTalepViewModels[i].Stok.Ayrac2</span>
                                        }
                                        @if (Model.MalzemeTalepViewModels[i].Boyut3 != "0")
                                        {
                                            <span>@Model.MalzemeTalepViewModels[i].Stok.Oncul3</span>
                                            <span>@Model.MalzemeTalepViewModels[i].Boyut3</span>
                                            <span>@Model.MalzemeTalepViewModels[i].Stok.Ayrac3</span>
                                        }
                                        @if (Model.MalzemeTalepViewModels[i].Boyut4 != "0")
                                        {
                                            <span>@Model.MalzemeTalepViewModels[i].Stok.Oncul4</span>
                                            <span>@Model.MalzemeTalepViewModels[i].Boyut4</span>
                                            <span>@Model.MalzemeTalepViewModels[i].Stok.Ayrac4</span>
                                        }
                                </td>
                                <td>@Model.MalzemeTalepViewModels[i].Birim</td>
                                <td>@((Model.MalzemeTalepViewModels[i].Kg != "0") ?
                                                                        decimal.Parse(Model.MalzemeTalepViewModels[i].Kg).ToString("N2") : "")
                                                                                                                                          </td>
                                                                                                                                          <td>@((Model.MalzemeTalepViewModels[i].M2 != "0") ?
                                                                        decimal.Parse(Model.MalzemeTalepViewModels[i].M2).ToString("N2") : "")
                                                                                                                                          </td>
                                                                                                                                          <td>@((Model.MalzemeTalepViewModels[i].Mm != "0") ?
                                                                        decimal.Parse(Model.MalzemeTalepViewModels[i].Mm).ToString("N2") : "")
                                                                                                                                          </td>
                                                                                                                                          <td>@((Model.MalzemeTalepViewModels[i].M != "0") ?
                                                                        decimal.Parse(Model.MalzemeTalepViewModels[i].M).ToString("N2") : "")
                                </td>
                            </tr>
                                                        }
                        </tbody>
                    </table>
                </div>
            </section>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <section class="card card-modern">
                <div class="card-body">
                    <table class="table table-striped datatable-yetkili mb-0" id="datatable-editable"
                        style="min-width: 550px">
                        <thead>
                            <tr>
                                <th>Firma</th>
                                <th>Yetkili</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                </div>
            </section>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <section class="card card-modern">
                <div class="card-body">
                    <table class="table table-ecommerce-simple table-striped mb-0 firmaTable"
                        style="min-width: 1200px;">
                        <thead>
                            <tr>
                                <th width="40%">Firma Adı</th>
                                <th>Yetkili Adı</th>
                                <th>Yetkili Telefonu</th>
                                <th>Yetkili E-Posta</th>
                                <th class="text-center" width="8%">Mail Durum</th>
                                <th class="text-center" width="8%">Talep Durum</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var malzemeTalepGroup in Model.MalzemeTalepler.GroupBy(mt => mt.CariYetkiliId))
                            {
                                var malzemeTalep = malzemeTalepGroup.First();
                                <tr>
                                    <td><a asp-action="MalzemeTalepleriDetay" asp-route-id="@malzemeTalep.CariYetkiliId"><strong>@malzemeTalep.CariViewModel.KisaAdi</strong></a></td>
                                    <td>@malzemeTalep.CariYetkiliViewModel.AdiSoyadi</td>
                                    <td>@malzemeTalep.CariYetkiliViewModel.Telefon</td>
                                    <td>@malzemeTalep.CariYetkiliViewModel.EPosta</td>
                                    <td class="text-center">
                                        <i class="fa-regular fa-circle-xmark fa-lg text-danger"></i>
                                    </td>
                                    <td class="text-center">
                                        <i class="fa-regular fa-circle-xmark fa-lg text-danger"></i>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </section>
        </div>
    </div>
    <div class="row action-buttons">
        <div class="col-12 col-md-auto">
            <button id="addToTable"
                class="btn btn-default btn-px-4 py-3 d-flex align-items-center font-weight-semibold line-height-1">
                <i class="bx bx-plus me-2"></i> Firma Satır Ekle
            </button>
        </div>
        <div class="col-12 col-md-auto ms-md-auto mt-3 mt-md-0">
            <a asp-action="FiyatKarsilastirma"
                class="btn btn-default btn-px-4 py-3 d-flex align-items-center font-weight-semibold line-height-1"><i
                    class="bx bx-trending-up text-4 me-2"></i> Fiyat Karşılaştır</a>
        </div>
        <div class="col-12 col-md-auto mt-3 mt-md-0">
            <button type="submit"
                class="submit-button btn btn-primary btn-px-4 py-3 d-flex align-items-center font-weight-semibold line-height-1"
                data-loading-text="Loading...">
                <i class="bx bx-envelope text-4 me-2"></i> E-Posta Gönder
            </button>
        </div>
    </div>
</form>

