@{
    ViewData["LayoutTitle"] = "Stok Tanımlamalar";
}

<header class="page-header">
    <h2>@ViewData["LayoutTitle"]</h2>

    <div class="right-wrapper text-end">
        <ol class="breadcrumbs me-3">
            <li>
                <a asp-action="Index"><span>Tanımlamalar</span></a>
            </li>

            <li><span class="text-light">Stok Tanımlar</span></li>
        </ol>
    </div>
</header>

<div class="row">
    <div class="col-lg-6 col-xl-4">
        <div class="row">
            <div class="col-lg-12 pb-2 pb-lg-0 mb-3 mb-lg-0">
                <div class="card card-modern">
                    <div class="card-body py-4">
                        <div class="row align-items-center">
                            <div class="col-md-4 text-left text-md-right pr-md-4 mt-4 mt-md-0 d-none d-md-block border-end text-center">
                                <i
                                    class="fas fa-boxes icon icon-inline icon-xl bg-primary rounded-circle text-color-light"></i>
                            </div>
                            <div class="col-12 col-md-7 col-xl-6 text-center text-md-left mx-auto">
                                <a asp-action="UrunGruplar"><span class="text-6 text-color-dark">Stok
                                        Grup</span></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-6 col-xl-4">
        <div class="row">
            <div class="col-lg-12 pb-2 pb-lg-0 mb-3 mb-lg-0">
                <div class="card card-modern">
                    <div class="card-body py-4">
                        <div class="row align-items-center">
                            <div class="col-md-4 text-left text-md-right pr-md-4 mt-4 mt-md-0 d-none d-md-block border-end text-center">
                                <i
                                    class="fas fa-box-open icon icon-inline icon-xl bg-primary rounded-circle text-color-light"></i>
                            </div>
                            <div class="col-12 col-md-7 col-xl-6 text-center text-md-left mx-auto">
                                <a asp-action="Stoklar"><span class="text-6 text-color-dark">Stok
                                        Tanım</span></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-6 col-xl-4">
        <div class="row">
            <div class="col-lg-12 pb-2 pb-lg-0 mb-3 mb-lg-0">
                <div class="card card-modern">
                    <div class="card-body py-4">
                        <div class="row align-items-center">
                            <div class="col-md-4 text-left text-md-right pr-md-4 mt-4 mt-md-0 d-none d-md-block border-end text-center">
                                <i
                                    class="fas fa-file-pen icon icon-inline icon-xl bg-primary rounded-circle text-color-light"></i>
                            </div>
                            <div class="col-12 col-md-7 col-xl-6 text-center text-md-left mx-auto">
                                <a asp-action="StokOzellikler"><span class="text-6 text-color-dark">Stok
                                        Özellik Tanım</span></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>